#!/bin/sh
#
# http://github.com/vitax
#
# [automatically generated template text]
#

usage() {
    >&2 printf '%s\n' "Usage: ${0##*/} []"
    exit 1
}

launch_st() {
    st -t "Suckless Terminal" -T "Suckless Terminal" -c "Suckless Terminal"
}

launch_st_tabbed() {
    tabbed -c -r 2 st -w ''
}

main() {
    case $1 in
        t)
            launch_st_tabbed
            ;;
        *)
            launch_st
            ;;
    esac
}

main "$@"
