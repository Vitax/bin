#! /bin/sh

set -e

get_interface() {
    for int in wlp5s0 enp0s31f6 lo ; do
        case $(ifconfig $int 2>/dev/null) in
            *)
                echo $int
                break
        esac
    done
}

get_vpn() {
    vpn -i && vpn="ï€£ $(vpn -c)"
    printf '%s' "${vpn:-ï‚œ  None}"
}

get_song() {
    song=$(song 2>/dev/null)
    case $song in
        ytsearch*|radio.html)
            song=loading...
    esac
    [ "$song" ] && printf 'ðŸŽµ %s /' "$song"
}

get_ssid() {
    int=$(get_interface)
    case $int in
        enp0s31f6) 
            ssid='ïª¨ Wired' 
            ;;
        wlp5s0)
            connected=$(iw dev $int link | grep "Connected")
            case $connected in
                *Connected*)
                    ssid="ïª¨ $(iw dev $int link | grep "SSID:" | cut -d " " -f2)"
                    ;;
            esac
    esac
    printf '%s' "${ssid:-ïª© No Internet}"
}

get_traffic() {
    while read -r line ; do
        set -- $line
    done <<EOF
    $(netstat -c 1 -w 1 -b -I $(get_interface))
EOF
    printf 'ï£ %s ï¢ %s' \
        "$(printf '%s\n' "$1" | byteconvert)" \
        "$(printf '%s\n' "$2" | byteconvert)"
}

get_mem() {
    max=$(($(sysctl -n hw.physmem) / 1024 / 1024))

    while read -r _ _ line _ ; do
        used=$line
    done <<-EOF
    $(vmstat)
EOF

    printf 'ï¡š %s' "${used}" #/${max}
}

get_bat() {
    ac_state=$(cat /sys/class/power_supply/BAT0/status)
    bat_val=$(cat /sys/class/power_supply/BAT0/capacity)
    case $ac_state in
        "Not charging")
            emoji='ï‰€ '
            ;;
        "Charging") 
            emoji='ï’’'
            ;;
        "Discharging")
            emoji=$(get_bat_emoji $bat_val)
            ;;
    esac

    printf "%s %s%%" "$emoji" "$bat_val"
}

get_bat_emoji() {
    if [ $1 -gt 80 ] ; then
        emoji='ï‰€ '
    elif [ $1 -gt 60 ] ; then
        emoji='ï‰ '
    elif [ $1 -gt 35 ] ; then
        emoji='ï‰‚ '
    elif [ $1 -gt 10 ] ; then
        emoji='ï‰ƒ '
    else
        emoji='ï‰„ '
    fi

    printf "%s" "$emoji"
}

get_vol() {
    muted=$(pamixer --sink 0 --get-mute)
    vol=$(volume)

    if $muted = true; then
        printf 'ï‘¦ %s' "muted"
    else
        printf 'ï€¨ %s%%' "$vol"
    fi
}

get_space() {
    df -h | while read -r line ; do
        case $line in
            */home)
                set -- $line
                printf 'ïŸ‰ %s' $4
                break
        esac
    done
}

get_date() {
    printf '%s' "$(date "+%a %d %I:%M %p")"
}

print_info() {
    printf '  %s  %s  %s  %s  \n' \
        "$(get_bat)" \
        "$(get_space)" \
        "$(get_ssid)" \
        "$(get_date)"
        # "$(get_traffic)" \
        # "$(get_mem)" \
}

case $1 in
    -d)
        xsetroot -name "$(print_info)"
        while sleep 30; do
            xsetroot -name "$(print_info)"
        done
        ;;
     *)
         print_info
esac
